{
	"name": "@lightbase/rn-design-system",
	"version": "2.1.0",
	"description": "Lightbase internal react native design system",
	"main": "./lib/module/index.js",
	"types": "./lib/typescript/src/index.d.ts",
	"exports": {
		".": {
			"source": "./src/index.tsx",
			"types": "./lib/typescript/src/index.d.ts",
			"default": "./lib/module/index.js"
		},
		"./package.json": "./package.json"
	},
	"files": [
		"src",
		"lib",
		"android",
		"ios",
		"cpp",
		"app.plugin.js",
		"*.podspec",
		"!ios/build",
		"!android/build",
		"!android/gradle",
		"!android/gradlew",
		"!android/gradlew.bat",
		"!android/local.properties",
		"!**/__tests__",
		"!**/__fixtures__",
		"!**/__mocks__",
		"!**/.*"
	],
	"scripts": {
		"test": "jest",
		"typecheck": "tsc --noEmit",
		"check": "npx @biomejs/biome check ./ --write",
		"prepare": "bob build",
		"release": "release-it",
		"updates": "npx npm-check-updates -i"
	},
	"keywords": [
		"react-native",
		"ios",
		"android"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/lightbasenl/rn-design-system.git"
	},
	"author": "Oliver Winter <owinter86@gmail.com> (https://github.com/owinter86)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/lightbasenl/rn-design-system/issues"
	},
	"homepage": "https://github.com/lightbasenl/rn-design-system#readme",
	"publishConfig": {
		"registry": "https://registry.npmjs.org/"
	},
	"dependencies": {
		"@capsizecss/core": "3.1.1",
		"@ctrl/tinycolor": "4.1.0",
		"mime": "^3.0.0",
		"opentype.js": "1.3.4",
		"react-keyed-flatten-children": "5.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@react-navigation/bottom-tabs": "7.3.13",
		"@react-navigation/elements": "2.4.2",
		"@react-navigation/native": "7.1.9",
		"@react-navigation/native-stack": "7.3.13",
		"@release-it/conventional-changelog": "10.0.1",
		"@types/mime": "^3.0.4",
		"@types/opentype.js": "1.3.8",
		"@types/react": "19.0.10",
		"babel-plugin-module-resolver": "5.0.2",
		"expo": "53.0.9",
		"expo-module-scripts": "^4.1.7",
		"react": "19.0.0",
		"react-native": "0.79.2",
		"react-native-builder-bob": "^0.40.11",
		"react-native-keyboard-controller": "1.17.1",
		"react-native-reanimated": "3.17.4",
		"react-native-safe-area-context": "5.4.0",
		"react-native-gesture-handler": "2.24.0",
		"react-native-unistyles": "^3.0.0-rc.4",
		"release-it": "19.0.2",
		"typescript": "5.8.3"
	},
	"peerDependencies": {
		"@react-navigation/bottom-tabs": "*",
		"@react-navigation/elements": "*",
		"@react-navigation/native": "*",
		"@react-navigation/native-stack": "*",
		"react": "*",
		"react-native": "*",
		"react-native-keyboard-controller": "*",
		"react-native-reanimated": "*",
		"react-native-safe-area-context": "*",
		"react-native-gesture-handler": "*"
	},
	"engines": {
		"node": ">= 22.15.0"
	},
	"react-native-builder-bob": {
		"source": "src",
		"output": "lib",
		"targets": [
			[
				"module",
				{
					"esm": true
				}
			],
			[
				"typescript",
				{
					"project": "tsconfig.build.json"
				}
			]
		]
	},
	"create-react-native-library": {
		"languages": "js",
		"type": "library",
		"version": "0.50.3"
	}
}
