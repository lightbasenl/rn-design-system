{
  "name": "@lightbase/rn-design-system",
  "version": "1.1.5",
  "description": "Lightbase internal react native design system",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "app.plugin.js",
    "*.podspec",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "npm workspace @lightbase/rn-design-system-example",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli lib",
    "prepare": "bob build",
    "release": "release-it",
    "updates": "npx npm-check-updates -i"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lightbasenl/rn-design-system.git"
  },
  "author": "Oliver Winter <owinter86@gmail.com> (https://github.com/owinter86)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lightbasenl/rn-design-system/issues"
  },
  "homepage": "https://github.com/lightbasenl/rn-design-system#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@capsizecss/core": "^3.1.1",
    "@ctrl/tinycolor": "^4.0.3",
    "react-keyed-flatten-children": "^3.0.0",
    "mime": "^3.0.0",
    "opentype.js": "^1.3.4"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^18.6.0",
    "@react-navigation/bottom-tabs": "^6.5.12",
    "@react-navigation/elements": "^1.3.22",
    "@react-navigation/native": "^6.1.10",
    "@react-navigation/native-stack": "^6.9.18",
    "@release-it/conventional-changelog": "^8.0.1",
    "@types/mime": "^3.0.4",
    "@types/opentype.js": "^1.3.8",
    "@types/react": "~18.2.55",
    "babel-plugin-module-resolver": "5.0.0",
    "commitlint": "^18.6.0",
    "del-cli": "^5.1.0",
    "eslint": "^8.56.0",
    "eslint-config-universe": "^12.0.0",
    "pod-install": "^0.2.0",
    "prettier": "^3.2.5",
    "react": "18.2.0",
    "react-native": "0.73.4",
    "react-native-builder-bob": "^0.23.2",
    "react-native-keyboard-controller": "^1.10.6",
    "react-native-reanimated": "3.7.0",
    "react-native-safe-area-context": "4.9.0",
    "release-it": "^17.0.3",
    "expo-module-scripts": "^3.4.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "@react-navigation/bottom-tabs": "*",
    "@react-navigation/elements": "*",
    "@react-navigation/native": "*",
    "@react-navigation/native-stack": "*",
    "react": "*",
    "react-native": "*",
    "react-native-keyboard-controller": "*",
    "react-native-reanimated": "*",
    "react-native-safe-area-context": "*"
  },
  "workspaces": [
    "example"
  ],
  "engines": {
    "node": ">= 20.0.0"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
