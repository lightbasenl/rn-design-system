{
	"name": "@lightbase/rn-design-system",
	"version": "1.2.12",
	"description": "Lightbase internal react native design system",
	"main": "lib/commonjs/index",
	"module": "lib/module/index",
	"types": "lib/typescript/src/index.d.ts",
	"react-native": "src/index",
	"source": "src/index",
	"files": [
		"src",
		"lib",
		"android",
		"ios",
		"cpp",
		"app.plugin.js",
		"*.podspec",
		"!ios/build",
		"!android/build",
		"!android/gradle",
		"!android/gradlew",
		"!android/gradlew.bat",
		"!android/local.properties",
		"!**/__tests__",
		"!**/__fixtures__",
		"!**/__mocks__",
		"!**/.*"
	],
	"scripts": {
		"example": "npm workspace @lightbase/rn-design-system-example",
		"test": "jest",
		"typecheck": "tsc --noEmit",
		"check": "npx @biomejs/biome check ./ --write",
		"clean": "del-cli lib",
		"prepare": "bob build",
		"release": "release-it",
		"updates": "npx npm-check-updates -i"
	},
	"keywords": ["react-native", "ios", "android"],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/lightbasenl/rn-design-system.git"
	},
	"author": "Oliver Winter <owinter86@gmail.com> (https://github.com/owinter86)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/lightbasenl/rn-design-system/issues"
	},
	"homepage": "https://github.com/lightbasenl/rn-design-system#readme",
	"publishConfig": {
		"registry": "https://registry.npmjs.org/"
	},
	"dependencies": {
		"@capsizecss/core": "^4.1.2",
		"@ctrl/tinycolor": "^4.1.0",
		"chalk": "4.1.2",
		"mime": "^4.0.4",
		"opentype.js": "^1.3.4",
		"react-keyed-flatten-children": "^3.0.2"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@commitlint/config-conventional": "^18.6.0",
		"@react-navigation/bottom-tabs": "^7.0.1",
		"@react-navigation/elements": "^2.0.0",
		"@react-navigation/native": "^7.0.0",
		"@react-navigation/native-stack": "^7.0.0",
		"@release-it/conventional-changelog": "^8.0.1",
		"@types/mime": "^4.0.0",
		"@types/opentype.js": "^1.3.8",
		"@types/react": "~18.3.12",
		"babel-plugin-module-resolver": "5.0.2",
		"commitlint": "^18.6.0",
		"del-cli": "^6.0.0",
		"expo-module-scripts": "^3.5.2",
		"pod-install": "^0.2.2",
		"react": "18.3.1",
		"react-native": "0.76.1",
		"react-native-builder-bob": "^0.31.0",
		"react-native-keyboard-controller": "^1.14.4",
		"react-native-reanimated": "3.16.1",
		"react-native-safe-area-context": "4.14.0",
		"react-native-uitextview": "^1.4.0",
		"release-it": "^17.10.0",
		"typescript": "^5.6.3"
	},
	"peerDependencies": {
		"@react-navigation/bottom-tabs": "*",
		"@react-navigation/elements": "*",
		"@react-navigation/native": "*",
		"@react-navigation/native-stack": "*",
		"react": "*",
		"react-native": "*",
		"react-native-keyboard-controller": "*",
		"react-native-reanimated": "*",
		"react-native-safe-area-context": "*",
		"react-native-uitextview": "*"
	},
	"workspaces": ["example"],
	"engines": {
		"node": ">= 20.0.0"
	},
	"jest": {
		"preset": "react-native",
		"modulePathIgnorePatterns": [
			"<rootDir>/example/node_modules",
			"<rootDir>/lib/"
		]
	},
	"commitlint": {
		"extends": ["@commitlint/config-conventional"]
	},
	"release-it": {
		"git": {
			"commitMessage": "chore: release ${version}",
			"tagName": "v${version}"
		},
		"npm": {
			"publish": true
		},
		"github": {
			"release": true
		},
		"plugins": {
			"@release-it/conventional-changelog": {
				"preset": "angular"
			}
		}
	},
	"react-native-builder-bob": {
		"source": "src",
		"output": "lib",
		"targets": [
			"commonjs",
			"module",
			[
				"typescript",
				{
					"project": "tsconfig.build.json"
				}
			]
		]
	}
}
